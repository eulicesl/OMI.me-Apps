# JARVIS Production Configuration Template
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=8080
NODE_ENV=production

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# OpenRouter Configuration (Primary AI provider)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_REFERER=https://your-app.ondigitalocean.app
OPENROUTER_TITLE=JARVIS Assistant

# OMI Integration Configuration
OMI_API_BASE_URL=https://api.omi.me

# Encryption Configuration (CRITICAL - GENERATE YOUR OWN!)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_THIS_TO_YOUR_GENERATED_KEY
# Previous key for rotation (optional)
ENCRYPTION_KEY_PREV=

# Optional Security Headers
# HSTS_MAX_AGE=31536000
# CSP_REPORT_URI=https://your-csp-report-endpoint.com

# Optional Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
# STRICT_RATE_LIMIT_MAX=10

# Optional Audit Logging
# AUDIT_LOG_ENDPOINT=https://your-logging-service.com/audit
# AUDIT_LOG_API_KEY=your-audit-api-key

# Optional Session Configuration
# SESSION_SECRET=your-session-secret-here
# SESSION_MAX_AGE=86400000

# Optional CORS Configuration
# CORS_ORIGIN=https://your-app.ondigitalocean.app
# CORS_CREDENTIALS=true