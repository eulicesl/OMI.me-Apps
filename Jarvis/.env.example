# J.A.R.V.I.S. Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000

# Supabase Configuration (Optional - works without it)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Anthropic API (Required for AI mode)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Apple Services Configuration
# Note: These work automatically via AppleScript, no API keys needed!
APPLE_REMINDERS_LIST=J.A.R.V.I.S.
APPLE_NOTES_FOLDER=J.A.R.V.I.S.
APPLE_CALENDAR_NAME=J.A.R.V.I.S.

# Default Recipients (Optional)
DEFAULT_IMESSAGE_RECIPIENT=+1234567890
PARTNER_PHONE=+1234567890

# AI Processing Mode
JARVIS_AI_MODE=true

# Pattern Detection Settings
PATTERN_CONFIDENCE_THRESHOLD=0.8
PATTERN_MIN_OCCURRENCES=3

# Session Settings
SESSION_TIMEOUT_MINUTES=60
ANALYSIS_INTERVAL_SECONDS=30

# ngrok URL (for production)
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook
